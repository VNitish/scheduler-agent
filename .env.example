# ==============================================
# SUPABASE (PostgreSQL Database)
# ==============================================
# Get from: https://supabase.com/dashboard/project/_/settings/database
DATABASE_URL="postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres"
NEXT_PUBLIC_SUPABASE_URL="https://[project-ref].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"

# ==============================================
# GOOGLE OAUTH & CALENDAR API
# ==============================================
# Get from: https://console.cloud.google.com/apis/credentials
NEXT_PUBLIC_GOOGLE_CLIENT_ID="your-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-client-secret"
GOOGLE_CALENDAR_API_KEY="your-api-key"

# ==============================================
# LLM API (Choose one)
# ==============================================
# OpenAI (Recommended for cost) - Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-..."

# Anthropic (Alternative) - Get from: https://console.anthropic.com/
# ANTHROPIC_API_KEY="sk-ant-..."

# ==============================================
# ELEVENLABS (Voice Synthesis)
# ==============================================
# Get from: https://elevenlabs.io/app/settings/api-keys
# Optional: Leave empty to use browser Speech API only
ELEVENLABS_API_KEY="your-elevenlabs-key"
ELEVENLABS_VOICE_ID="21m00Tcm4TlvDq8ikWAM" # Default voice (Rachel)
ELEVENLABS_AGENT_ID="your-agent-id-here"

# ==============================================
# APP CONFIGURATION
# ==============================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-random-secret-string-here" # Generate: openssl rand -base64 32

# ==============================================
# OPTIONAL: MONITORING & ANALYTICS
# ==============================================
# SENTRY_DSN="your-sentry-dsn"
# NEXT_PUBLIC_GA_TRACKING_ID="G-XXXXXXXXXX"
